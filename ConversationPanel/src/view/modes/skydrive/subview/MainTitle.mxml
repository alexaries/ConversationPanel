<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 width="400" height="300">
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<s:Line bottom="0" xFrom="0" xTo="{this.width}" yFrom="0" yTo="0">
		<s:stroke>
			<s:SolidColorStroke alpha="0.3" color="0x4a4b4c"/>
		</s:stroke>
	</s:Line>
	
	<s:Label color="0x146e3f" fontSize="16" horizontalCenter="0" text="网盘资源" verticalCenter="0"/>
	
	<mx:LinkButton id="btnClose" right="10" verticalCenter="0" width="15" height="15" 
				   downSkin="@Embed('assets/skydrive/icon_close.png')" 
				   overSkin="@Embed('assets/skydrive/icon_close.png')"
				   upSkin="@Embed('assets/skydrive/icon_close.png')"/>
	
</s:Group>
